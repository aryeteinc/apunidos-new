---
const {slogan} = Astro.props;
import logo from '../img/logo_wo_slogan.png';
---
<header class="z-50 glassmorphism ">
    <nav x-data="{ isOpen: false }" class="relative bg-gray-800 dark:bg-gray-900 w-full">
        <div class="container px-6 py-4 mx-auto md:flex md:justify-between md:items-center ">
            <div class="flex items-center justify-between">
                <a href="/" class="flex flex-col items-start m-0 p-0">
                    <img class="w-auto h-12 md:h-24 m-0 p-0" src={logo.src} alt=""/>
                    <small class="block text-base font-bold text-slate-100 -mt-4 md:-mt-4 dark:text-gray-300">
                        {slogan}
                    </small>
                </a>              
    
                <!-- Mobile menu button -->
                <div class="flex lg:hidden">
                    <button x-cloak x-on:click="isOpen = !isOpen" type="button" class="text-white dark:text-gray-200 hover:text-white dark:hover:text-white focus:outline-none focus:text-white dark:focus:text-gray-400" aria-label="toggle menu">
                        <svg x-show="!isOpen" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 8h16M4 16h16" />
                        </svg>
                
                        <svg x-show="isOpen" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
    
            <!-- Mobile Menu open: "block", Menu closed: "hidden" -->
            <div x-cloak x-bind:class="[isOpen ? 'translate-x-0 opacity-100 ' : 'opacity-0 -translate-x-full']" 
            class="absolute inset-x-0 z-20 w-full transition-all duration-300 ease-in-out bg-white border border-gray-300/25 rounded-2xl
             md:mt-0 md:top-0 md:relative md:bg-transparent md:w-auto md:opacity-100 md:translate-x-0 md:flex md:items-center 
              dark:bg-gray-800">
                <div class="
                flex flex-col overflow-hidden p-1 bg-white rounded-2xl
                md:flex-row md:bg-gray-500/25">

                    <a class="item-menu item-menu-left" 
                    href="/proyectos">Proyectos</a>
                    <a class="item-menu" href="/acerca-de-nosotros">Empresa</a>
                    <a class="item-menu" href="https://noticias.apunidos.com/">Avances de Obra
                    </a>
                    <a class="item-menu" href="/politicas-de-tratamiento-de-datos">Legal</a>  
                    <a class="item-menu item-menu-right bg-gradient-to-r from-sky-500/50 to-indigo-500/50" href="https://apunidos.com/commerce/index.html">
                        Pagos
                    </a>                 
                </div>
    
                
            </div>
        </div>
    </nav>
    
    

</header>  
  