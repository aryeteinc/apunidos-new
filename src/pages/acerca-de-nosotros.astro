---
import { Icon } from "astro-icon";
import BaseLayout from "../layouts/BaseLayout.astro";
import '../base.css';
import '../style.css';
---
<BaseLayout title="Acerca de Nosotros">   	
    <section class="">
        <div class="container px-6 py-10 mx-auto">
            <h1 class="text-2xl font-semibold text-gray-800 capitalize lg:text-3xl dark:text-white">
                Construyendo Nuestra <br> Historia <span class="underline decoration-blue-500"></span></h1>
    
            <p class="mt-4 text-gray-500 xl:mt-6 dark:text-gray-300">
                
            </p>
    
            <div class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-16 md:grid-cols-2 xl:grid-cols-3">
                <div class="space-y-3">
                    <span class="inline-block p-3 text-apsky bg-gray-100 rounded-full dark:text-white dark:bg-slate-800">
